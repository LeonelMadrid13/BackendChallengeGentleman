<!-- views/weather.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Weather App</title>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&display=swap" rel="stylesheet">
  <style>
    body {
      margin: 0;
      min-height: 100vh;
      font-family: 'Montserrat', Arial, sans-serif;
      background: radial-gradient(circle at 60% 30%, #a494ed 20%, #6e51b5 100%);
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .weather-container {
      background: #f6f4ff;
      padding: 2.5em 2em 2em 2em;
      border-radius: 24px;
      box-shadow: 0 8px 40px rgba(80, 70, 160, 0.25);
      width: 440px;
      max-width: 95vw;
      min-height: 420px;
    }
    .search-row {
      display: flex;
      margin-bottom: 1.3em;
    }
    .search-row input[type="text"] {
      flex: 1;
      font-size: 1em;
      padding: 0.7em 1em;
      border: none;
      border-radius: 2em 0 0 2em;
      background: #fff;
      outline: none;
      transition: background 0.2s;
    }
    .search-row button {
      font-size: 1em;
      padding: 0.7em 2em;
      border: none;
      border-radius: 0 2em 2em 0;
      background: #6e51b5;
      color: #fff;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.2s;
    }
    .main-info {
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
    }
    .temp-block {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }
    .city-row {
      font-size: 1.4em;
      font-weight: bold;
      color: #37384e;
      display: flex;
      align-items: center;
    }
    .main-temp {
      font-size: 3.5em;
      font-weight: 700;
      margin: 0.3em 0 0.1em 0;
      color: #383b53;
      display: flex;
      align-items: center;
    }
    .unit-switch {
      margin-left: 0.8em;
      font-size: 1em;
      color: #6458ab;
    }
    .details {
      margin-top: 0.8em;
      font-size: 1em;
      color: #4b4b70;
    }
    .summary {
      margin: 0.6em 0 1.2em 0;
      font-size: 1.08em;
      color: #888;
      letter-spacing: 0.01em;
    }
    .forecast-row {
      display: flex;
      justify-content: space-between;
      margin-top: 1.2em;
      gap: 0.4em;
    }
    .forecast-day {
      flex: 1;
      background: #ede9ff;
      margin: 0 0.2em;
      border-radius: 14px;
      padding: 0.7em 0.2em 0.5em 0.2em;
      display: flex;
      flex-direction: column;
      align-items: center;
      font-size: 0.97em;
    }
    .forecast-day .date {
      font-size: 0.98em;
      color: #5b5a90;
      margin-bottom: 0.2em;
      font-weight: 500;
    }
    .forecast-day img {
      width: 38px;
      margin: 0.15em 0;
    }
    .forecast-day .temps {
      font-size: 1.1em;
      font-weight: bold;
      color: #33376d;
    }
    .precip {
      font-size: 0.95em;
      color: #678;
      margin-bottom: 0.16em;
    }
  </style>
</head>
<body>
  <div class="weather-container">
    <form class="search-row" method="get" action="/weather">
      <input type="text" name="city" placeholder="Enter the city" value="<%= city || '' %>" required>
      <button type="submit">Search</button>
    </form>

    <% if (error) { %>
      <div style="color: #d22; margin: 0.7em 0 1.2em 0;"><%= error %></div>
    <% } %>

    <% if (weather) { %>
      <div class="main-info">
        <div class="temp-block">
          <div class="city-row">
            <%= weather.city %>
            <% if (weather.icon) { %>
              <img src="<%= weather.icon %>" alt="" style="width:32px;vertical-align:middle;margin-left:0.4em;" />
            <% } %>
          </div>
          <div class="main-temp">
            <%= weather.temp %>
            <span class="unit-switch">째C | 째F</span>
          </div>
          <div class="summary">
            <%= weather.timeText %>
          </div>
        </div>
        <div class="details">
          Precipitation: <%= weather.precip || '-' %><br>
          Humidity: <%= weather.humidity || '-' %><br>
          Wind: <%= weather.wind || '-' %>
        </div>
      </div>
      <div class="forecast-row">
        <% weather.forecast.forEach(day => { %>
          <div class="forecast-day">
            <div class="date"><%= day.day %></div>
            <img src="<%= day.icon %>" alt="" />
            <div class="temps"><%= day.tempHigh %>째 / <%= day.tempLow %>째</div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>
