<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Personal Blog</title>
  <style>
    body { font-family: 'Comic Neue', Arial, sans-serif; background: #fafafa; }
    .card { border: 2px solid #444; border-radius: 10px; padding: 2em; margin: 2em auto; max-width: 500px;}
    .header-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1.5em;
    }
    h2 { margin: 0; }
    h3 { margin-bottom: 0.5em; color: #444; font-size: 1.15em; }
    ul { list-style: none; padding: 0; margin: 0 0 1.5em 0;}
    li { display: flex; justify-content: space-between; margin-bottom: 1em;}
    .date { color: #4a76fd; font-size: .95em;}
    a { text-decoration: none; font-weight: bold; color: #222; }
    a:hover { text-decoration: underline; color: #4a76fd; }
    .login-btn {
      background: #444;
      color: #fff;
      padding: 0.5em 1em;
      border-radius: 7px;
      text-decoration: none;
      font-weight: bold;
      margin-left: 1em;
    }
  </style>
</head>
<body>
  <div class="card">
    <div class="header-row">
      <h2>Personal Blog</h2>
      <a class="login-btn" href="/login">Login</a>
    </div>
    <% Object.keys(articlesByUser).forEach(function(username) { %>
      <h3><%= username %></h3>
      <ul>
        <% articlesByUser[username].forEach(function(article) { %>
          <li>
            <a href="/article/<%= article.slug %>?user=<%= username %>"><%= article.title %></a>
            <span class="date"><%= article.date %></span>
          </li>
        <% }) %>
      </ul>
    <% }) %>
  </div>
</body>
</html>
